
<!-- 用户 openid -->
<view class="userinfo">
    <button 
      open-type="getUserInfo" 
      bindgetuserinfo="onGetUserInfo"
      class="userinfo-avatar"
      style="background-image: url({{avatarUrl}})"
      size="default"
    ></button>
    <view class="userinfo-nickname-wrapper">
      <button class="userinfo-nickname" bindtap="onGetOpenid">退出登录</button>
    </view>
  </view>


  <view class="title">我的项目</view>

  <scroll-view class="scroll1" scroll-y="true" style="height: 600rpx;">
    
    <button class="newbtn1" type="primary" style="width:90%" wx:for="{{3}}" bindtap='gotoquit1'>
     <view class="item">项目 </view> 
     <view class="item">人数 </view> 
     <view class="item">地点 </view> 
    </button>
  </scroll-view>


   <view class="title" >我的比赛</view>

  <scroll-view class="scroll2" scroll-y="true" style="height: 400rpx;">
  
    <button class="newbtn2" type="primary" style="width:90%" wx:for="{{2}}" bindtap='gotoquit2'>
      <view class="item">赛事 </view> 
      <view class="item">时间 </view>
    </button>
  </scroll-view>
